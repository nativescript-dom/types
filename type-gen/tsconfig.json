{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmitHelpers": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "lib": ["es2017", "DOM"],
    "baseUrl": ".",
    "noErrorTruncation": true,
    "outDir": "./dist",
    "types": ["node"]
  },
  "exclude": ["node_modules", "out", "dist"]
}
