{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "DOM"],
    "sourceMap": true,
    "jsx": "preserve",
    "jsxImportSource": "ns-solid",
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "ns-solid/jsx-runtime": ["../../out/core_solid_jsx.d.ts"]
    },
    "allowJs": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "maxNodeModuleJsDepth": 5
  },
  "include": ["src"],
  "exclude": ["node_modules", "platforms"]
}
